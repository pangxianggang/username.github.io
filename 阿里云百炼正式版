    function updateSoundToggleButton() {
      if (soundEnabled) {
        soundToggleBtn.classList.add('active');
        soundToggleBtn.textContent = 'å£°éŸ³å¼€å¯';
      } else {
        soundToggleBtn.classList.remove('active');
        soundToggleBtn.textContent = 'å£°éŸ³å…³é—­';
      }
